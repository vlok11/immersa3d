{
  "appId": "com.immersa.3d-viewer",
  "productName": "Immersa 3D",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "electron/**/*"
  ],
  "win": {
    "target": "nsis",
    "icon": "public/icon.png"
  },
  "mac": {
    "target": "dmg",
    "icon": "public/icon.png",
    "category": "public.app-category.graphics-design"
  },
  "linux": {
    "target": "AppImage",
    "icon": "public/icon.png",
    "category": "Graphics"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowToChangeInstallationDirectory": true
  }
}
